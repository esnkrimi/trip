{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@appBase/*": ["apps/pe/src/app/*"],
      "@pe/advanced-autocomplete": ["libs/advanced-autocomplete/src/index.ts"],
      "@pe/auto-complete": ["libs/auto-complete/src/index.ts"],
      "@pe/confirm-modal": ["libs/confirm-modal/src/index.ts"],
      "@pe/dymaic-autocomplete": ["libs/dymaic-autocomplete/src/index.ts"],
      "@pe/dynamic-autocomplete-destinations": [
        "libs/dynamic-autocomplete-destinations/src/index.ts"
      ],
      "@pe/esn-carousel": ["libs/esn-carousel/src/index.ts"],
      "@pe/experiences": ["libs/experiences/src/index.ts"],
      "@pe/form-trip-location": ["libs/form-trip-location/src/index.ts"],
      "@pe/help": ["libs/help/src/index.ts"],
      "@pe/image-gallery": ["libs/image-gallery/src/index.ts"],
      "@pe/loading-image": ["libs/loading-image/src/index.ts"],
      "@pe/loading-progress": ["libs/loading-progress/src/index.ts"],
      "@pe/map": ["libs/map/src/index.ts"],
      "@pe/messages": ["libs/messages/src/index.ts"],
      "@pe/navbar-menu": ["libs/navbar-menu/src/index.ts"],
      "@pe/public-autocomplete": ["libs/public-autocomplete/src/index.ts"],
      "@pe/responsive-list": ["libs/responsive-list/src/index.ts"],
      "@pe/trip-submit": ["libs/trip-submit/src/index.ts"],
      "@pe/trips": ["libs/trips/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
